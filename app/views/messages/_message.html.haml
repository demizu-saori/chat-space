.message
  .message__upper-info
    %p.message__upper-info__talker
      = message.user.name
    %p.message__upper-info__date
      = message.created_at.strftime("%Y/%m/%d (%a) %H:%M:%S")
  .message__text__box
    - if message.content.present?
      %p.message__text
        = message.content
    = image_tag message.image, class: 'lower-message__image' if message.image.present?
